<Defs>
	<FactionDef ParentName="FactionBase">
		<defName>CorePlus_BloodfeederClan</defName>
		<label>bloodfeeder clan</label>
		<description>An organized coalition of bloodfeeders and their thralls. They are not interested in diplomacy or trade.\n\nBloodfeeders attack with a blend of spacer tech and medieval arms.</description>
		<factionIconPath>World/WorldObjects/Expanding/BloodfeederClan</factionIconPath>
		<pawnSingular>bloodfeeder</pawnSingular>
		<pawnsPlural>bloodfeeders</pawnsPlural>
		<categoryTag>Sanguophages</categoryTag>
		<permanentEnemy>true</permanentEnemy>
		<earliestRaidDays>60</earliestRaidDays>
		<settlementGenerationWeight>0.6</settlementGenerationWeight>
		<requiredCountAtGameStart>1</requiredCountAtGameStart>
		<canSiege>true</canSiege>
		<canStageAttacks>true</canStageAttacks>
		<leaderTitle>lord</leaderTitle>
		<leaderTitleFemale>lady</leaderTitleFemale>
		<fixedLeaderKinds>
			<li>CorePlus_GothSanguophageKnight</li>
			<li>CorePlus_GothSanguophageSlayer</li>
		</fixedLeaderKinds>
		<techLevel>Spacer</techLevel>
		<factionNameMaker>NamerFactionOutlander</factionNameMaker>
		<settlementNameMaker>NamerSettlementOutlander</settlementNameMaker>
		<allowedCultures>
			<li>Astropolitan</li>
		</allowedCultures>
		<colorSpectrum>
			<li>(0.53, 0.03, 0.03)</li>
			<li>(0.63, 0.13, 0.13)</li>
		</colorSpectrum>
		<requiredMemes>
			<li>Bloodfeeding</li>
		</requiredMemes>
		<disallowedMemes>
			<li MayRequire="Ludeon.RimWorld.Ideology">Blindsight</li>
			<li MayRequire="Ludeon.RimWorld.Ideology">Nudism</li>
		</disallowedMemes>
		<disallowedPrecepts>
			<li MayRequire="Ludeon.RimWorld.Ideology">ApparelDesired_Strong_Subordinate</li>
			<li MayRequire="Ludeon.RimWorld.Ideology">ApparelDesired_Soft_Subordinate</li>
			<li MayRequire="Ludeon.RimWorld.Ideology">Nudity_Male_Mandatory</li>
			<li MayRequire="Ludeon.RimWorld.Ideology">Nudity_Female_Mandatory</li>
			<li MayRequire="Ludeon.RimWorld.Ideology">Nudity_Male_CoveringAnythingButGroinDisapproved</li>
			<li MayRequire="Ludeon.RimWorld.Ideology">Nudity_Female_CoveringAnythingButGroinDisapproved</li>
		</disallowedPrecepts>
		<structureMemeWeights>
			<Structure_Ideological MayRequire="Ludeon.RimWorld.Ideology">2</Structure_Ideological>
		</structureMemeWeights>
		<xenotypeSet>
			<xenotypeChances>
				<CorePlus_DarkElf MayRequire="coreplus.genes.elves">0.1</CorePlus_DarkElf>
				<CorePlus_Enchanter>0.05</CorePlus_Enchanter>
			</xenotypeChances>
		</xenotypeSet>
		<modExtensions>
			<li Class="VFECore.FactionDefExtension">
				<neverConnectToRoads>true</neverConnectToRoads>
				<minDistanceToOtherSettlements>10</minDistanceToOtherSettlements>
			</li>
		</modExtensions>
		<backstoryFilters>
			<li>
				<categories>
					<li>Offworld</li>
					<li>Outlander</li>
				</categories>
			</li>
		</backstoryFilters>
		<caravanTraderKinds />
		<visitorTraderKinds />
		<baseTraderKinds />
		<apparelStuffFilter>
			<thingDefs>
				<li>Leather_Human</li>
				<li>Synthread</li>
				<li>Steel</li>
			</thingDefs>
		</apparelStuffFilter>
		<allowedArrivalTemperatureRange>-40~45</allowedArrivalTemperatureRange>
		<raidLootMaker>OutlanderRaidLootMaker</raidLootMaker>
		<maxPawnCostPerTotalPointsCurve>
			<points>
				<li>(0,35)</li>
				<li>(70, 50)</li>
				<li>(700, 100)</li>
				<li>(1300, 150)</li>
				<li>(100000, 10000)</li>
			</points>
		</maxPawnCostPerTotalPointsCurve>
		<pawnGroupMakers>
			<li>
				<!-- Normal fights, standard mix -->
				<kindDef>Combat</kindDef>
				<options>
					<CorePlus_GothThrall>25</CorePlus_GothThrall>
					<CorePlus_GothThrallAlt>5</CorePlus_GothThrallAlt>
					<pphhyy_Vargulf MayRequire="pphhyy.sanguinaryanimals">15</pphhyy_Vargulf>
					<CorePlus_GothBloodbeastKnight>8</CorePlus_GothBloodbeastKnight>
					<CorePlus_GothSanguophageKnight>2</CorePlus_GothSanguophageKnight>
					<CorePlus_GothSanguophageSlayer>1</CorePlus_GothSanguophageSlayer>
					<CorePlus_GothEnchanterGunner>4</CorePlus_GothEnchanterGunner>
				</options>
			</li>
			<!-- Raid Animal -->
			<li MayRequire="pphhyy.sanguinaryanimals">
				<kindDef>Combat</kindDef>
				<disallowedStrategies>
					<li>StageThenAttack</li>
					<li>Siege</li>
					<li>ImmediateAttackSappers</li>
					<li>ImmediateAttackBreaching</li>
					<li>ImmediateAttackBreachingSmart</li>
				</disallowedStrategies>
				<options>
					<CorePlus_GothThrall>25</CorePlus_GothThrall>
					<CorePlus_GothSanguophageKnight>2</CorePlus_GothSanguophageKnight>
					<pphhyy_BloodScarab MayRequire="Ludeon.RimWorld.Biotech">25</pphhyy_BloodScarab>
					<pphhyy_Vargulf>15</pphhyy_Vargulf>
				</options>
			</li>
			<li>
				<kindDef>Settlement</kindDef>
				<options>
					<CorePlus_GothThrall>25</CorePlus_GothThrall>
					<CorePlus_GothThrallAlt>5</CorePlus_GothThrallAlt>
					<CorePlus_GothBloodbeastKnight>8</CorePlus_GothBloodbeastKnight>
					<CorePlus_GothSanguophageKnight>2</CorePlus_GothSanguophageKnight>
					<CorePlus_GothSanguophageSlayer>1</CorePlus_GothSanguophageSlayer>
					<CorePlus_GothEnchanterGunner>4</CorePlus_GothEnchanterGunner>
				</options>
			</li>
			<li MayRequire="Ludeon.RimWorld.Ideology">
				<kindDef>Miners</kindDef>
				<commonality>1</commonality>
				<options>
					<Miner>1</Miner>
				</options>
			</li>
			<li MayRequire="Ludeon.RimWorld.Ideology">
				<kindDef>Hunters</kindDef>
				<commonality>1</commonality>
				<options>
					<Hunter>1</Hunter>
				</options>
			</li>
			<li MayRequire="Ludeon.RimWorld.Ideology">
				<kindDef>Loggers</kindDef>
				<commonality>1</commonality>
				<options>
					<Logger>1</Logger>
				</options>
			</li>
			<li MayRequire="Ludeon.RimWorld.Ideology">
				<kindDef>Farmers</kindDef>
				<commonality>1</commonality>
				<options>
					<Farmer>1</Farmer>
				</options>
			</li>
		</pawnGroupMakers>
		<maxConfigurableAtWorldCreation>9999</maxConfigurableAtWorldCreation>
		<configurationListOrderPriority>32</configurationListOrderPriority>
		<settlementTexturePath>World/WorldObjects/DefaultSettlement</settlementTexturePath>
	</FactionDef>
</Defs>